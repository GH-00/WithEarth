<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".StoreActivityCategory">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/base_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edge_bottom"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        android:layout_gravity="top"
        android:elevation="5dp"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tv_toolbar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginLeft="5dp"
            android:fontFamily="@font/cafe24ssurroundair"
            android:gravity="center"
            android:text="카테고리"
            android:textColor="#292929"
            android:textSize="20dp"
            android:textStyle="bold" />

    </androidx.appcompat.widget.Toolbar>

    <Button
        android:id="@+id/cate_cloth"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="textStart"
        android:paddingLeft="20dp"
        android:background="@drawable/edge_all"
        android:text="의류"
        android:textSize="16dp"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/cate_food"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left|center_vertical"
        android:paddingLeft="20dp"
        android:background="@drawable/edge_all"
        android:text="식품"
        android:textSize="16dp"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/cate_clean"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left|center_vertical"
        android:paddingLeft="20dp"
        android:background="@drawable/edge_all"
        android:text="청소용품"
        android:textSize="16dp"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/cate_sundries"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edge_all"
        android:paddingLeft="20dp"
        android:gravity="left|center_vertical"
        android:text="잡화"
        android:textSize="16dp"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/cate_cos"
        android:layout_width="match_parent"
        android:background="@drawable/edge_all"
        android:layout_height="wrap_content"
        android:paddingLeft="20dp"
        android:gravity="left|center_vertical"
        android:text="화장품"
        android:textSize="16dp"
        android:textStyle="bold"/>

</LinearLayout>