<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StoreActivityCategory">

    <TextView
        android:id="@+id/catinfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="카테고리"
        android:textSize="30dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"/>

    <Button
        android:id="@+id/cate_cloth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/catinfo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="의류"
        android:textSize="15dp"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/cate_food"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cate_cloth"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="식품"
        android:textSize="15dp"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/cate_clean"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cate_food"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="청소용품"
        android:textSize="15dp"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/cate_sundries"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cate_clean"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="잡화"
        android:textSize="15dp"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/cate_cos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cate_sundries"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="화장품"
        android:textSize="15dp"
        android:textStyle="bold"/>

</RelativeLayout>